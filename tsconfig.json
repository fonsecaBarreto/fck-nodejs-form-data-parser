{
    "compilerOptions": {
        "outDir": "lib",
        "module": "commonjs",
        "target": "es2019", 
        "declarationDir": "./lib/types",
        "declaration": true,                             
        "declarationMap": true,                          
        "sourceMap": true,  
        "allowJs": true,                                                         
        "esModuleInterop": true,                          
        "strict": true,                                  
        "skipLibCheck": true,   
        "baseUrl": ".",
        "rootDirs": ["src", "examples"]                       
    },
    "include": ["src" , "tests", "examples"],
    "exclude": ["node_modules"],
}